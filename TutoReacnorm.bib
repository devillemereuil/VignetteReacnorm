@article{odea_unifying_2021,
  title = {Unifying Individual Differences in Personality, Predictability and Plasticity: {{A}} Practical Guide},
  shorttitle = {Unifying Individual Differences in Personality, Predictability and Plasticity},
  author = {O'Dea, Rose E. and Noble, Daniel W. A. and Nakagawa, Shinichi},
