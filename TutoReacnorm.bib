  keywords = {environmental predictability,hyperplasticity,maladaptive plasticity,photoperiodism,reaction norm}
}

@article{chevin_evolution_2017,
  title = {Evolution of Phenotypic Plasticity in Extreme Environments},
  author = {Chevin, Luis-Miguel and Hoffmann, Ary A.},
  date = {2017-06-19},
  journaltitle = {Philosophical Transactions of the Royal Society B: Biological Sciences},
  shortjournal = {Philos. Trans. R. Soc. B Biol. Sci.},
  volume = {372},
  number = {1723},
  pages = {20160138},
  issn = {0962-8436, 1471-2970},
  doi = {10.1098/rstb.2016.0138},
  url = {http://rstb.royalsocietypublishing.org/content/372/1723/20160138},
  urldate = {2018-09-04},
  abstract = {Phenotypic plasticity, if adaptive, may allow species to counter the detrimental effects of extreme conditions, but the infrequent occurrence of extreme environments and/or their restriction to low-quality habitats within a species range means that they exert little direct selection on reaction norms. Plasticity could, therefore, be maladaptive under extreme environments, unless genetic correlations are strong between extreme and non-extreme environmental states, and the optimum phenotype changes smoothly with the environment. Empirical evidence suggests that populations and species from more variable environments show higher levels of plasticity that might preadapt them to extremes, but genetic variance for plastic responses can also be low, and genetic variation may not be expressed for some classes of traits under extreme conditions. Much of the empirical literature on plastic responses to extremes has not yet been linked to ecologically relevant conditions, such as asymmetrical fluctuations in the case of temperature extremes. Nevertheless, evolved plastic responses are likely to be important for natural and agricultural species increasingly exposed to climate extremes, and there is an urgent need to collect empirical information and link this to model predictions. This article is part of the themed issue ‘Behavioural, ecological and evolutionary responses to extreme climatic events'.},
  langid = {english}
}

@article{chevin_phenotypic_2013,
  title = {Phenotypic Plasticity and Evolutionary Demographic Responses to Climate Change: Taking Theory out to the Field},
