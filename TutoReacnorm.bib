@article{rovelli_genetics_2020,
  title = {The Genetics of Phenotypic Plasticity in Livestock in the Era of Climate Change: A Review},
  shorttitle = {The Genetics of Phenotypic Plasticity in Livestock in the Era of Climate Change},
  author = {Rovelli, Giacomo and Ceccobelli, Simone and Perini, Francesco and Demir, Eymen and Mastrangelo, Salvatore and Conte, Giuseppe and Abeni, Fabio and Marletta, Donata and Ciampolini, Roberta and Cassandro, Martino and Bernabucci, Umberto and Lasagna, Emiliano},
  date = {2020-12-14},
  journaltitle = {Italian Journal of Animal Science},
