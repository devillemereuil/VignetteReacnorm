@article{robertson_mathematical_1966,
  title = {A Mathematical Model of the Culling Process in Dairy Cattle},
  author = {Robertson, Alan},
  date = {1966},
  journaltitle = {Animal Science},
  shortjournal = {Anim. Sci.},
  volume = {8},
